{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}